.loginDialog
  .ant-modal-body
    padding: 0

  .ant-modal-content
    background: var(--var-dialog-bg)
    border-radius: 15px
    color: var(--var-text-color)

  .modalTitle
    text-align: center
    padding: 56px 0 20px

    .title
      color: var(--var-dialog-max-color)
      height: 33px
      font-size: 24px
      font-weight: 600
      line-height: 33px

  .modalMain
    .walletHeader
      width: 200px
      margin: 0 auto
      text-align: center

      .title
        height: 22px
        font-size: 16px
        font-family: PingFangSC-Regular, PingFang SC
        font-weight: 400
        color: var(--var-text-color)
        line-height: 22px

      .select
        min-width: 220px
        margin: 10px auto 0
        height: 48px
        line-height: @height
        background: var(--var-block-voteBlock)
        padding: 0 52px
        border-radius: 8px
        cursor: pointer

    .wallet
      padding: 40px 44px 20px 22px
      flexWrap()

      .item
        flexWrapItem(4)
        text-align: center
        padding: 0 0 24px 24px

        div
          border: 1px solid var(--var-border)
          background: var(--var-block-voteBlock)
          padding: 16px
          border-radius: 8px
          cursor: pointer

          &:hover, &.cur
            background: var(--var-bg)
            box-shadow: 0px 4px 12px 0px rgba(255, 216, 78, 0.25)
            border: 1px solid #FFD84E

          img
            display: block
            margin: 0 auto 10px
            height: 50px
            width: 50px

    .foot
      text-align: center
      padding: 0 0 20px

      .form
        display: flex
        margin: 0 auto 70px
        width: 300px

        .label
          font-size: 16px
          height: 40px
          line-height: @height

        .input
          border: 1px solid var(--var-border)
          position: relative
          flex: 1
          margin: 0 0 0 16px
          border-radius: 8px
          height: 40px
          line-height: @height

          .ant-input
            width: 100%
            height: 40px
            line-height: @height

          div
            height: 20px
            font-size: 14px
            font-family: PingFangSC-Regular, PingFang SC
            font-weight: 400
            color: #E96630
            line-height: 20px
            position: absolute
            bottom: -30px

      .btn
        display: inline-block
        height: 40px
        line-height: @height
        background: #FFD84E
        border-radius: 20px
        font-size: 16px
        font-weight: 400
        text-align: center
        color: #0C0E11
        box-shadow: 0px 2px 5px 0px rgba(#FFD84E, 0.5)
        padding: 0 40px
        cursor: pointer
        border: 0 none