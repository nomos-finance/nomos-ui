
.lt-nav
    width: 300px
    padding: 0 60px 0 0

    .logo
        display: block
        height: 46px
        width: 178px
        text-align: center
        background: url('./img/logo.png') no-repeat
        background-size: 100% 100%
        margin: 30px 0 60px

    .menu
        .item
            border-radius: 15px
            text-align: center
            font-size: 20px
            height: 60px
            line-height: @height
            cursor: pointer
            display: block
            color: var(--var-text-color)
            text-align: center
            margin: 0 0 10px

            &:hover, &.cur
                background: var(--var-main-color)

    .doc
        .item
            background: #fff
            height: 60px
            line-height: @height
            border-radius: 15px