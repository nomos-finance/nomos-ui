
.lt-nav
    width: 300px
    padding: 0 60px 0 0

    .logo
        display: block
        height: 46px
        width: 178px
        text-align: center
        background: url('./img/logo.png') no-repeat
        background-size: 100% 100%
        margin: 30px 0 60px

    .menu
        .item
            border-radius: 15px
            font-size: 20px
            height: 60px
            line-height: @height
            cursor: pointer
            display: flex
            color: var(--var-text-color)
            margin: 0 0 10px

            &:hover, &.cur
                background: var(--var-main-color)

                i
                    .icon
                        fill: #000

            i
                display: block
                height: 60px
                line-height: @height
                position: relative
                text-align: center
                padding: 0 0 0 60px

                .icon
                    size(25px)
                    position: absolute
                    top: 50%
                    left: 50%
                    transform: translate(-50%, -50%)
                    fill: #9c9c9c

            span
                flex: 1

    .doc
        margin: 100px 0

        .item
            background: #fff
            height: 60px
            line-height: @height
            border-radius: 15px
            display: flex
            font-size: 20px
            color: #666
            margin: 0 0 10px

            i
                display: block
                height: 60px
                line-height: @height
                position: relative
                padding: 0 0 0 60px

                .icon
                    size(24px)
                    position: absolute
                    top: 50%
                    left: 50%
                    transform: translate(-50%, -50%)
                    fill: #666

            span
                flex: 1

    .medium
        justifyContentSpaceBetween()

        .icon
            size(50px)