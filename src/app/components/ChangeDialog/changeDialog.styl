.changeDialog
    .ant-modal-body
        padding: 0

    .ant-modal-content
        background: var(--var-dialog-bg)
        border-radius: 15px
        color: var(--var-text-color)
        overflow: hidden

    .tab
        display: flex
        padding: 20px 20px 0

        .tabItem
            flex: 1
            text-align: center

            &.cur
                color: yellow

    .tabMain
        background: var(--var-dialog-main-bg)
        padding: 10px

    .submit
        display: inline-block
        height: 40px
        line-height: @height
        background: #FFD84E
        border-radius: 20px
        font-size: 16px
        font-family: PingFangSC-Regular, PingFang SC
        font-weight: 400
        text-align: center
        color: #0C0E11
        box-shadow: 0px 2px 5px 0px rgba(#FFD84E, 0.5)
        padding: 0 20px
