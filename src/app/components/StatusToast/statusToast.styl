@keyframes turn
    0%
        transform: rotate(0deg)

    25%
        transform: rotate(90deg)

    50%
        transform: rotate(180deg)

    75%
        transform: rotate(270deg)

    100%
        transform: rotate(360deg)

.statusToast
    .ant-modal
        top: -300px
    .ant-modal-body
        padding: 0

    .ant-modal-content
        background: #5E6169
        border-radius: 9px
        overflow: hidden

    .statsContent
        display: flex

        &.loading
            .icon
                &:after
                    animation: turn 1s linear infinite
                    background-image: url('./img/loading.png')
                    border-radius: 100%

        &.error
            .icon
                &:after
                    background-image: url('./img/error.png')

        &.successfully
            .icon
                &:after
                    background-image: url('./img/successfully.png')

        .statusIcon
            width: 66px
            background: #2781FF
            position: relative

            .icon
                size(20px)
                position: absolute
                top: 50%
                left: 50%
                transform: translate(-50%, -50%)

                &:after
                    display: block
                    content: ' '
                    size(20px)
                    background-repeat: no-repeat
                    background-size: 100% 100%

        .statusMain
            flex: 1
            padding: 10px 16px

            .statusTitle
                font-size: 16px
                font-weight: bold
                color: #fff
                position: relative
                margin: 0px

            .statusText
                color: #BCC3D6
                font-size: 12px
                font-weight: bold