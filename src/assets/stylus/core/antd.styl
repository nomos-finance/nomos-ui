.listTable
    background: #2D2F35
    padding: 0 25px 25px
    border-radius: 9px

    .ant-table-wrapper
        padding: 0 0 25px

    .ant-table
        background: #2D2F35

        .ant-table-thead>tr>th
            background: #2D2F35
            border-bottom: 1px solid #373A42
            color: #fff
            font-size: 16px
            font-family: Poppins-SemiBold !important
            padding: 12px

        .ant-table-placeholder
            &:hover
                >td
                    background: none

            >td
                border: 0 none !important

            .ant-empty-image
                display: none

            .ant-empty-description
                font-size: 14px
                color: #B7BBC6
                text-align: center
                background: url('../img/noData.png') no-repeat center
                background-size: auto 30px
                box-sizing: border-box
                padding: 90px 0 0

        .ant-table-tbody>tr>td
            font-family: Poppins-Regular !important
            color: #fff
            border-bottom: 1px solid #373A42
            font-size: 16px
            padding: 12px
            div
                font-family: Poppins-Regular !important
            .btnWrap
                display: flex

                .btn
                    padding: 0 10px
                    height: 40px
                    line-height: @height
                    background: #2781FF
                    border-radius: 9px
                    cursor: pointer

                    &:nth-child(2)
                        background: #4F525A
                        margin: 0 0 0 10px

            .tag
                height: 36px
                line-height: @height
                background: #4F525A
                border-radius: 6px
                padding: 0 8px
                margin: 0  0 0 9px

            .link
                color: #fff
                background: url(../img/link.png) no-repeat right center
                background-size: 16px 16px
                background-position: right 5px
                padding: 0 25px 0 0

            .long
                color: #44C27F

            .short
                color: #e15c48

        .ant-table-tbody>tr.ant-table-row:hover>td
            background: #2D2F35
            opacity: 0.7

            .tag
                color: rgba(#fff, 0.8)

            .link
                color: rgba(#fff, 0.8)
                background-image: url(../img/linkHover.png)

            .btn
                background: rgba(#2781FF, 0.8)
                color: rgba(#fff, 0.8)

                &:nth-child(2)
                    background: #4F525A

.poolDropdownBtn
    height: 32px
    line-height: @height
    background: #2781FF
    border-radius: 9px
    font-size: 12px
    padding: 0 13px
    font-size: 16px
    font-family 'Poppins-Regular'

    span
        background: url('../img/iconDown.png') no-repeat right center
        background-size: 12px 6px
        padding: 0 20px 0 0

.poolDropdown
    background: #2D2F35
    border: 1px solid #2781FF
    border-radius: 8px

    .ant-dropdown-menu
        background: #2D2F35
        border-radius: 8px
        padding: 0 10px

        .ant-dropdown-menu-item
            color: #B7BBC6
            border-top: 1px solid #373A42
            font-size: 16px
            text-align: center
            padding: 10px 0
            font-family 'Poppins-Regular'

            &:first-child
                border: 0 none

        .ant-dropdown-menu-item-active
            background: #2D2F35
            color: #fff

.customToolTip
    width auto
    .ant-tooltip-inner
        background: #2D2F35
        color: #B7BBC6
        border: 1px solid #2781FF
        border-radius: 10px
        font-size: 12px
        padding 10px 10px

    .ant-tooltip-arrow
        size(20px)

        .ant-tooltip-arrow-content
            background: #2D2F35
            border: 1px solid #2781FF
            size(20px)
.customToolTip-l
    width 300px
    .ant-tooltip-inner
        width 300px
        text-align center
.customSelectDown
    background: #1F2127 !important
    border-radius: 9px
    padding: 0

    .ant-select-item, .ant-select-item-empty
        height: 48px
        line-height: @height
        padding: 0 20px
        font-size: 16px
        color: #B7BBC6

    .ant-select-item-option-active:not(.ant-select-item-option-disabled)
        background: #2D2F35
        color: #fff

    .ant-select-item-option-selected
        background: rgba(#1F2127, 0.8)

.ant-modal-mask
        background-color: rgba(0,0,0,0.7) !important
